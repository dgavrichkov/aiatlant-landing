---
import content from "../../content/atlant-ru.json";
import Footer from "../../blocks/footer/Footer.astro";
import Games from "../../blocks/games/Games.astro";
import Header from "../../blocks/header/Header.astro";
import Hero from "../../blocks/hero/Hero.astro";
import Info from "../../blocks/info/Info.astro";
import Plans from "../../blocks/plans/Plans.astro";
import Ellipses from "../../components/Ellipses.astro";
import "../../styles/reset.css";
import "../../styles/fonts.css";
import "../../styles/main.css";

const {
  hero,
  games,
  plans,
  info,
  copyright,
  footerLinks,
  menu,
  socials,
  headerButtons,
} = content;

const TITLE = "Ai Atlant";
const LANG = "ru";

const testVar = import.meta.env.TEST_ENVIRONMENT;
---

<html lang={LANG}>
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{TITLE}</title>
  </head>
  <body>
    <div style="outline: 1px solid red;">{testVar}</div>
    <div class="container">
      <Header menu={menu} headerButtons={headerButtons} />
      <Hero data={hero} />
      <Info data={info} />
      <Games data={games} />
      <Plans data={plans} />
      <Footer
        copyright={copyright}
        footerLinks={footerLinks}
        menu={menu}
        socials={socials}
      />
      <Ellipses />
    </div>
  </body>
</html>

<script define:vars={{ testVar }}>
  console.log("Test:", testVar);
</script>
