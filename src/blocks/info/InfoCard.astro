---
import { marked } from "marked";
const { data: infoCard } = Astro.props;
---

<article class="infocard" set:html={marked.parse(infoCard.text)} />

<style>
  .infocard {
    --bg-x-pos: -12%;
    --lh-gap: 32px;
    --text-w: 70%;
    grid-area: info;
    border-radius: 24px;
    padding: 48px 41px;
    background-color: var(--primary-2);
    color: var(--text);
    display: flex;
    flex-direction: column;
    gap: var(--lh-gap);

    background-image: url("/images/logo-3x.png");
    background-size: auto calc(100% + 100px);
    background-repeat: no-repeat;
    background-position: center right var(--bg-x-pos);
  }

  :global(.infocard p) {
    font-weight: 400;
    font-size: 24px;
    line-height: var(--lh-gap);
    width: var(--text-w);
  }

  :global(.infocard p strong),
  :global(.infocard p b) {
    font-weight: 900;
  }

  @media (max-width: 1550px) {
    .infocard {
      --bg-x-pos: -38%;
    }
  }

  @media (max-width: 1194px) {
    .infocard {
      --bg-x-pos: -55%;
      --text-w: 74%;
    }
  }

  @media (max-width: 1024px) {
    .infocard {
      --bg-x-pos: -20%;
      min-height: 329px;
    }
  }

  @media (max-width: 768px) {
    .infocard {
      --lh-gap: 32px;
      --bg-x-pos: -70%;
      --text-w: 80%;
      --bg-x-pos: -160px;
    }
  }

  @media (max-width: 425px) {
    .infocard {
      --lh-gap: 20px;
      --bg-x-pos: -80%;
      --text-w: 70%;
      padding: 32px 16px;
      background-size: auto 150%;
      min-height: 239px;
    }

    :global(.infocard p) {
      font-size: 18px;
    }
  }

  @media (max-width: 375px) {
    .infocard {
      --bg-x-pos: -160px;
    }
  }
</style>
