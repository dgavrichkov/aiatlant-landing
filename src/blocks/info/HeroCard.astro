---
import { marked } from 'marked';
const { data: heroCard } = Astro.props;
---
<article class="herocard">
  <div class="herocard__logo">AI Atlant</div>
  <div class="herocard__title" set:html={marked(heroCard.title)}></div>
  <div class="herocard__text">{heroCard.text}</div>
</article>

<style>
  .herocard {
    --bg-x-pos: -20px;
    grid-area: hero;
    padding: 60px 48px 56px;
    border-radius: 24px;
    background-image: url('/images/card-hero.jpg');
    background-position-x: var(--bg-x-pos);
    background-size: cover;
    background-repeat: no-repeat;
    color: var(--text);
    position: relative;
    overflow: hidden;
  }

  .herocard::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    display: block;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.57);
    z-index: 1;
  }

  .herocard > * {
    position: relative;
    z-index: 2;
  }

  .herocard__logo {
    color: var(--text);
    font-family: "Jomhuria", sans-serif;
    font-weight: 400;
    font-size: 114px;
    line-height: 45px;

    margin-bottom: 60px;
  }

  .herocard__title {
    font-weight: 900;
    font-size: 56px;
    line-height: 65px;
    margin-bottom: 41px;
  }

  .herocard__text {
    font-weight: 400;
    font-size: 32px;
    line-height: 40px;
    max-width: 76%;
  }

  @media (max-width: 1550px) {
    .herocard {
      padding: 60px 30px 56px 48px ;

    }
    .herocard__text {
      max-width: 100%;
    }
  }

  @media (max-width: 1194px) {
    .herocard__text {
      font-size: 24px;
      line-height: 29px;
    }
  }

  @media (max-width: 1024px) {
    .herocard {
      min-height: 472px;
    }
  }

  @media (max-width: 425px) {
    .herocard {
      padding: 32px 16px;
      min-height: 311px;
    }

    .herocard__logo {
      font-size: 63px;
      line-height: 25px;
      margin-bottom: 45px;
    }

    .herocard__title {
      font-size: 38px;
      line-height: 38px;
      margin-bottom: 28px;
    }

    .herocard__text {
      font-size: 16px;
      line-height: 17px;
    }
  }
</style>