---
interface Props {
  data: {
    id: number;
    image: string;
    name: string;
    text: string;
    imgAlt?: string;
  };
}

const { data: item } = Astro.props;
---

<article class="feature">
  <picture class="feature__pic">
    <source
      srcset={`/aiatlant-landing/images/chronicles/${item.image}-1x.webp 1x, /aiatlant-landing/images/chronicles/${item.image}-2x.webp 2x`}
      type="image/webp"
    />
    <source
      srcset={`/aiatlant-landing/images/chronicles/${item.image}-1x.jpg 1x, /aiatlant-landing/images/chronicles/${item.image}-2x.jpg 2x`}
      type="image/jpeg"
    />
    <img
      width="200"
      src={`/aiatlant-landing/images/chronicles/${item.image}-1x.jpg`}
      alt={item?.imgAlt || ""}
    />
  </picture>
  <div class="feature__name">{item.name}</div>
  <div class="feature__text" set:html={item.text} />
</article>

<style>
  .feature {
    --b-rad: 56px;
    width: 100%;
    height: 100%;
    padding: 16px;
    padding-bottom: 70px;
    border-radius: var(--b-rad);
    background: var(--text);
    color: var(--background-primary);
  }

  .feature__pic {
    border-radius: var(--b-rad);
    overflow: hidden;
    margin-bottom: 32px;
    width: 100%;
    aspect-ratio: 543 / 393;
  }

  .feature__pic img {
    display: block;
    width: calc(100% + 20px);
    height: 100%;
    object-fit: cover;
    object-position: -20px 0;
    max-width: initial;
  }

  .feature__name {
    font-size: 40px;
    font-weight: 600;
    line-height: 1;
    margin-bottom: 32px;
    padding: 0 16px;
    min-height: 2lh;
  }

  .feature__text {
    font-size: 24px;
    line-height: 30px;
    padding: 0 16px;
  }

  @media (max-width: 768px) {
    .feature {
      --b-rad: 32px;
    }
    .feature__name {
      font-size: 32px;
      line-height: 1;
      margin-bottom: 16px;
    }

    .feature__text {
      font-size: 16px;
      line-height: 22px;
    }
  }

  @media (max-width: 320px) {
    .feature__name {
      font-size: 24px;
      line-height: 1;
    }
  }
</style>
