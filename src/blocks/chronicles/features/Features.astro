---
import FeatureCard from "./FeatureCard.astro";

const { data } = Astro.props;
---

<section class="features" id={data.id}>
  <div class="container">
    <h2 class="features__title title">{data.title}</h2>
    <ul class="features__list carousel">
      {
        data.list.map((item) => (
          <li class="features__item carousel__item">
            <FeatureCard data={item} />
          </li>
        ))
      }
    </ul>
  </div>
  <div class="cloud"></div>
</section>

<style>
  .features {
    position: relative;
    z-index: 4;
    color: var(--text);
    background-color: var(--background-secondary);
    padding-bottom: 82px;
    padding-top: 20px;
  }

  .features__title {
    position: relative;
    z-index: 2;
    margin-bottom: 82px;
  }

  .features__list {
    list-style: none;
    position: relative;
    z-index: 2;
    margin: 0;
    padding: 0;
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    gap: 16px 24px;
    align-items: stretch;
  }

  .cloud {
    display: block;
    background-image: url("/images/chronicles/clouds-2.png");
    background-repeat: no-repeat;
    background-size: cover;
    position: absolute;
    width: 506px;
    height: 384px;
    left: -263px;
    bottom: -200px;
    z-index: 1;
  }

  @media (max-width: 1440px) {
    .features {
      padding-bottom: 64px;
    }
  }

  @media (max-width: 1024px) {
    .features {
      padding-bottom: 48px;
    }

    .features__title {
      font-size: 40px;
      line-height: 1;
      margin-bottom: 48px;
    }

    .features__list {
      gap: 8px;
    }

    .carousel {
      display: flex;
      overflow-x: scroll;
      scroll-snap-type: x mandatory;
      scroll-behavior: smooth;
      -webkit-overflow-scrolling: touch;
    }

    .carousel::-webkit-scrollbar {
      display: none;
    }

    .carousel__item {
      flex: 0 0 42%;
      flex-shrink: 0;
      scroll-snap-align: center;
    }

    .carousel__item:last-child {
      margin-right: 48px;
    }

    .cloud {
      bottom: -100px;
    }
  }

  @media (max-width: 768px) {
    .features {
      padding-bottom:;
    }

    .features__title {
      text-align: center;
      font-size: 32px;
      line-height: 42px;
      margin-bottom: 46px;
    }

    .carousel__item {
      flex: 0 0 70%;
    }
  }

  @media (max-width: 425px) {
    .carousel__item {
      flex-basis: 90%;
    }

    .cloud {
      display: none;
    }
  }

  @media (max-width: 320px) {
    /*  */
  }
</style>
