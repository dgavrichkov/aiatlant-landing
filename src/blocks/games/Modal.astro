---
import { marked } from 'marked';
import Badge from '../../ui/Badge.astro';

const {game, utils, class: className, ...rest} = Astro.props;
---

<div class:list={[className, 'modal', 'hidden']} data-modal-id={game.id} {...rest}>
  <div class="modal__overlay" data-modal-close></div>
  <article class="modal__body">
    <div class="modal__hero">
      <button class="modal__close" data-modal-close>
        <span class="visually-hidden">Закрыть</span>
      </button>
      {game.isConcept && <Badge class="modal__badge">{utils.concept}</Badge>} 
        <picture class="modal__illustration">
          <source srcset={`./images/${game.pic}-1x.webp 1x, ./images/${game.pic}-3x.webp 2x`} type="image/webp">
          <source srcset={`./images/${game.pic}-1x.jpg 1x, ./images/${game.pic}-3x.jpg 2x`} type="image/jpeg">
          <img width="200" src={`./images/${game.pic}-1x.jpg`} alt={game?.alttext || ''}>
        </picture>
    </div>
    <div class="modal__content scroll-container">
      <div class="modal__title">{game.title}</div>
      <div class="modal__description" set:html={marked.parse(game.fullDescription || '')}></div>
    </div>
  </article>
</div>

<style>
  .modal {
    position: fixed;

    color: #fff;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 1000;
  }

  .modal.hidden {
    display: none;
  }

  .modal__overlay {
    z-index: 1;
    position: absolute;
    inset: 0;
    backdrop-filter: blur(9.9px);
    background: rgba(0, 0, 0, 0.72);
  }

  .modal__body {
    z-index: 2;
    position: relative;
    background: var(--primary-1);
    border-radius: 32px;
    width: 674px;
    max-width: calc(100vw - 74px);
    max-height: 90vh;
    max-height: 90dvh;

    display: grid;
    grid-template-columns: 1fr;
    grid-template-rows: 272px 1fr;
    gap: 32px;

    padding-bottom: 16px;

    aspect-ratio: 9 / 10;
  }

  .modal__hero {
    position: relative;
    border-radius: 32px;
    overflow: hidden;
  }

  .modal__close {
    position: absolute;
    right: 16px;
    top: 16px;
    border: none;
    width: 56px;
    aspect-ratio: 1;
    background: var(--primary-1);
    border-radius: 16px;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    z-index: 3;
  }

  .modal__close::after {
    content: '';
    background-image: url('/close.svg');
    background-repeat: no-repeat;
    background-size: contain;
    width: 32px;
    aspect-ratio: 1;
  }

  .modal__badge {
    position: absolute;
    z-index: 3;
    bottom: 16px;
    left: 16px;
  }

  .modal__illustration {
    aspect-ratio: 674 / 272;
    overflow: hidden;
    z-index: 2;
  }

  .modal__illustration img {
    display: block;
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: 0 15%;
  }

  .modal__content {
    padding: 0 24px;
    max-height: 100%;
    overflow-y: auto;
  }

  .modal__title {
    font-size: 32px;
    line-height: 34px;
    font-weight: 900;
    margin-bottom: 24px;
  }

  .modal__description {
    font-size: 16px;
    line-height: 21px;
  }

  :global(.modal__description > * + *) {
    margin-top: 12px;
  }

  @media (max-width: 768px) {
    .modal__body {
      aspect-ratio: 6 / 10;
    }

    .modal__illustration {
      aspect-ratio: 1 / 1;
      width: 100%;
      height: 100%;
      max-height: initial;
    }
  }
</style>